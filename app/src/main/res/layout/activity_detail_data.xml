<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailDataActivity">

    <TextView
        android:id="@+id/tvatas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An   : "
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/tvNo"
        app:layout_constraintTop_toBottomOf="@+id/tvatas"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="No.  : "
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/tvname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvatas"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ariani Iofi"
        android:textColor="@color/colorBlack"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tvname"
        app:layout_constraintLeft_toRightOf="@+id/tvNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="081234567890"
        android:textColor="@color/colorBlack"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clitem"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="376dp"
        android:layout_height="174dp"
        android:background="@drawable/bg">

        <TextView
            android:id="@+id/tvitem"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Item"
            android:textColor="@color/colorBlack"/>
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:text="Jumlah"
            android:textColor="@color/colorBlack"/>

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@+id/tvitem"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:paddingBottom="60dp"
            tools:listitem="@layout/detail_item">
        </androidx.recyclerview.widget.RecyclerView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/etCatat"
        app:layout_constraintTop_toBottomOf="@+id/clitem"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Catatan"
        android:inputType="textLongMessage"/>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/etCatat"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selesai"
        android:text="SELESAI"
        android:textColor="@color/colorWhite"/>

</androidx.constraintlayout.widget.ConstraintLayout>